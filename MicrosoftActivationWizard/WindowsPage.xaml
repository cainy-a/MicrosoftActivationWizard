<Page x:Class="MicrosoftActivationWizard.WindowsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MicrosoftActivationWizard"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="WindowsPage">

    <StackPanel HorizontalAlignment="Center">
        <TextBlock Margin="5" FontSize="20">What version of Windows do you have?</TextBlock>

        <Button Name="ButtonWin10" Click="ButtonWin10_OnClick" Margin="5" Height="25">Windows 10</Button>
        <Button Name="ButtonWinServer" Click="ButtonWinServer_OnClick" Margin="5" Height="25">Windows Server</Button>
    </StackPanel>
</Page>
