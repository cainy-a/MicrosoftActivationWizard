<Page x:Class="MicrosoftActivationWizard.RootPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MicrosoftActivationWizard"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="RootPage">

    <StackPanel HorizontalAlignment="Center">
        <TextBlock Margin="5" FontSize="20">What would you like to activate?</TextBlock>

        <Button Name="ButtonWindows" Click="ButtonWindows_OnClick" Margin="5" Height="25">Windows</Button>
        <Button Name="ButtonOffice" Click="ButtonOffice_OnClick"  Margin="5" Height="25">Office</Button>
    </StackPanel>
</Page>
